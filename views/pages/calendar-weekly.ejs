<%- contentFor('scripts'); %>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/moment.min.js" charset="utf-8"></script>
  <script src="/scripts/render-calendar-weekly.js" charset="utf-8"></script>
  <%- contentFor('css'); %>
    <link rel="stylesheet" href="/css/calendar-weekly.css">

    <%- contentFor('header-message'); %>

        <h6 class="align-text-middle" style="margin: 0px;" id="todays-date"></h6>

      <%- contentFor('body'); %>

        <table class="table table-bordered calendar-layer calendar-bg">
          <thead>
            <th scope="col" style="width: 5%" class="text-right">
              Time
            </th>

            <% for (day of days) { %>
              <th scope="col" style="width: 10%" class="text-center">
                <%= day %>
              </th>
              <% } %>

          </thead>
          <tbody>

            <% for (var i = startTime.hour; i < endTime.hour; i++) { %>
              <tr>
                <td class="text-right">
                  <%=i%12%>:00 </td>
                <% for (var j = 0; j < days.length; j++) { %>
                  <td class="text-center plus">
                    <i class="far fa-plus-square add-time"></i>
                  </td>
                  <% } %>
              </tr>
              <% } %>

          </tbody>

        </table>
        <table class="table calendar-layer calendar-fg">
          <thead>
            <th scope="col" style="width: 5%">
            </th>
            <% for (day of days) { %>
              <th scope="col" style="width: 10%">
              </th>
              <% } %>

          </thead>
          <tbody>

            <% for (var i = startTime.hour; i < endTime.hour; i++) { %>
              <tr>
                <td class="text-right">

                  <% for (var j = 0; j < days.length; j++) { %>
                    <td id="<%=days[j]+'-'+i %>" class="text-center plus calendar-new-event">
                    </td>
                    <% } %>
              </tr>
              <% } %>

          </tbody>
        </table>
        </div>
