<%- contentFor('scripts'); %>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/moment.min.js" charset="utf-8"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/mustache.js/2.3.0/mustache.min.js" charset="utf-8"></script>
  <script src="/scripts/render-calendar-weekly.js" charset="utf-8"></script>
  <%- contentFor('css'); %>
    <link rel="stylesheet" href="/css/calendar-weekly.css">

    <%- contentFor('header-message'); %>

      <h6 class="align-text-middle" style="margin: 0px;" id="todays-date"></h6>

      <%- contentFor('body'); %>
<body>
  Health Care Number: <%= information.healthcarenum %>
  Doctor: <%= information.chosenDoc %>
</body>

        <table class="table table-bordered calendar-layer calendar-bg">
          <thead>
            <th scope="col" style="width: 5%" class="text-right">
              Time
            </th>

            <% for (var j = 0; j < data.days.length; j++) { %>
              <th scope="col" style="width: 10%" class="text-center">
                <%= data.days[j] %>
              </th>
            <% } %>

          </thead>
          <tbody>

            <% for (var i = data.startTime.hour, f = data.startTime.minute; i < data.endTime.hour; i++) { %>
              <tr>
                <td class="text-right">
                  <%= i%>:00
                </td>
                <% for (var k = 0; k < 7; k++) { %>
                  <td id="<%=i %>" class="text-center h-100 calendar-tile">

                    <div class="plus calendar-bg">
                      <i class="far fa-plus-square add-time"></i>
                    </div>

                  </td>
                <% } %>
              </tr>
            <% } %>

          </tbody>

        </table>
      </div>
