<%- contentFor('scripts'); %>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/moment.min.js" charset="utf-8"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/mustache.js/2.3.0/mustache.min.js" charset="utf-8"></script>
  <script src="/scripts/render-calendar-weekly.js" charset="utf-8"></script>

  <%- contentFor('css'); %>
    <link rel="stylesheet" href="/css/calendar-weekly.css">

    <%- contentFor('header-message'); %>

      <h6 class="align-text-middle" style="margin: 0px;" id="todays-date"></h6>

      <%- contentFor('body'); %>

        <div class="card">
          <div class="card-body">

            <table align="center" class="table calendar-layer calendar-bg">
              <thead>
                <th scope="col" style="width: 10%" class="text-center align-middle">
                  Time
                </th>

                <% for (var j = 0; j < data.days.length; j++) { %>
                  <th scope="col" style="width: 10%" class="text-center pb-4">
                    <%= data.days[j] %>
                  </th>
                <% } %>

              </thead>

              <tbody>
                <% if (user) { %>
                  <%- include('calendar-weekly-user.ejs'); %>
                  <% } else { %>
                    <%- include('calendar-weekly-guest.ejs'); %><% } %>
                  </tbody>

                </table>
              </div>

            </div>

          </div>
