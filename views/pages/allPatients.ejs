<%- contentFor('css') %>
  <link rel="stylesheet" href="//cdn.datatables.net/1.10.18/css/jquery.dataTables.min.css">
  <%- contentFor('scripts') %>
  <script src="//cdn.datatables.net/1.10.18/js/jquery.dataTables.min.js" charset="utf-8"></script>
  <script>
  $(document).ready( function () {
      $('#myTable').DataTable();
  } );
  </script>
  <script src="/scripts/allPatients.js" charset="utf-8"></script>
  <%- contentFor('body') %>

    <div style="padding-top: 40px">
      <table id="myTable">
        <thead>
          <tr>
            <th>Health Care Number</th>
            <th>First Name</th>
            <th>Middle Name</th>
            <th>Last Name</th>
            <th>Sex</th>
            <th>Email</th>
            <th>Contact</th>
          </tr>
        </thead>
        <tbody>
          <% results.forEach(function (patient) { %>
            <tr>
              <td>
                <%= patient.healthcarenum %>
              </td>
              <td>
                <%= patient.fname %>
              </td>
              <td>
                <%= patient.mname %>
              </td>
              <td>
                <%= patient.lname %>
              </td>
              <td>
                <%= patient.sex %>
              </td>
              <td>
                <%= patient.email %>
              </td>
              <td>
                <div class="btn btn-primary btn-profile"
                data-pid="<%=patient.healthcarenum%>">
                  Profile
                </div>
              </td>
            </tr>
            <% }) %>
        </tbody>
      </table>
    </div>
