                              <h5 class="mb-0 white-text text-uppercase font-thin">
                                        First appointment notes <i class="fa fa-angle-down rotate-icon float-right"></i>
                                    </h5>
                            </a>
                          </div>

                          <!-- Card body -->
                          <div id="collapse1" class="collapse show" role="tabpanel" aria-labelledby="heading1">
                            <div class="card-body mb-1 rgba-grey-light white-text">
                              <p>THIS IS:
                                <%= console.log("THIS IS "); %>
                              </p>
                            </div>
                          </div>
                        </div>
                        <!-- Accordion card -->
                      </td>
                    </tr>
                    <tr>
                      <td>
                        <!-- Accordion card -->
                        <div class="card">

                          <!-- Card header -->
                          <div class="card-header rgba-stylish-strong z-depth-1 mb-1" role="tab" id="heading2">
