                        </div>
                        <!-- Accordion card -->
                      </td>
                    </tr>
                    <tr>
                      <td>
                        <!-- Accordion card -->
                        <div class="card">

                          <!-- Card header -->
                          <div class="card-header rgba-stylish-strong z-depth-1 mb-1" role="tab" id="heading3">
                            <a class="collapsed" data-toggle="collapse" data-parent="#accordionEx7" href="#collapse3" aria-expanded="false" aria-controls="collapse3">
